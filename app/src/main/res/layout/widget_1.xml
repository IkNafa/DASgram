<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    android:background="#09C">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#FF0000"
        android:text="@string/app_name"
        android:textColor="#000000"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"/>


    <TextView
        android:id="@+id/txt_1"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:drawableStart="@drawable/ic_music"
        android:text="@string/cancion"
        android:textColor="#000000"
        app:autoSizeMaxTextSize="15dp"
        android:layout_marginBottom="5dp"
        app:autoSizeMinTextSize="8sp"
        app:autoSizeTextType="uniform"/>

    <TextView
        android:id="@+id/txt_2"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="5dp"
        android:drawableStart="@drawable/ic_thumb_up"
        android:text="A Iker le ha gustado la foto de nafarrateIker"
        android:textColor="#000000"
        app:autoSizeMaxTextSize="15dp"
        app:autoSizeMinTextSize="8sp"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/txt_3"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:drawableStart="@drawable/ic_upload"
        android:text="Iker ha subido una foto"
        android:textColor="#000000"
        app:autoSizeMaxTextSize="15dp"
        app:autoSizeMinTextSize="8sp"
        app:autoSizeTextType="uniform"/>



</LinearLayout>